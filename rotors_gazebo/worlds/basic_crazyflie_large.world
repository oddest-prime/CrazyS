    <model name="camera4">
    <link name="link">
      <gravity>0</gravity>
      <!--pose>x y z roll pitch yaw</pose-->
      <pose>-7 -7 10 0 0.5 0.7854</pose> <!-- nice far away distance -->
      <!--pose>-0.6 0.7 1.7 0 1 -0.7854</pose--> <!-- as in testing room at homeoffice -->
      <inertial>
        <mass>0.1</mass>
      </inertial>
      <collision name="collision">
        <geometry>
          <box>
            <size>0.1 0.1 0.1</size>
          </box>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <box>
            <size>0.1 0.1 0.1</size>
          </box>
        </geometry>
      </visual>
      <sensor name="camera4" type="camera">
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>1720</width>
            <height>1080</height>
          </image>
          <clip>
